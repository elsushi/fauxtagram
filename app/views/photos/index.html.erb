<h1>Fauxtagram!</h1>
<p><%= link_to 'New photo', new_photo_path %></p>
<% @photos.each do |photo| %>
	<div class='col-md-4'>
	<h3><%= photo.caption %></h3>
	<%= image_tag photo.image.url(:thumb), class: 'uploaded-pic' %>
	<caption>Uploaded by <%= photo.user.email if photo.user %></caption>
	</div>
	<p>Tags:
		<%= tag_names(photo) %>
		<%= link_to 'Edit photo', edit_photo_path(photo) %>
		<%= link_to 'Destroy', photo_path(photo),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Buy a print', new_charge_path(photo) %>

	</p>	
<% end %>

	<h3>There are currently this many tags: <%= Tag.count %></h3>